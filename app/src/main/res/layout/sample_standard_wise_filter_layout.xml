<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_standard">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/bv_secondaryLightColor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        app:cardCornerRadius="@dimen/dimen_8"
        app:cardElevation="@dimen/dimen_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5">

            <TextView
                android:maxLines="1"
                android:id="@+id/tv_sample_course_wise"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/check_box_box"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:textSize="@dimen/font_size_17"
                tools:text="@string/strStanadrdName"
                android:textStyle="bold"
                android:textColor="@color/bv_primaryColor">
            </TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check_box_box"
                android:checked="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:buttonTint="@color/bv_primaryColor"
                android:layout_marginRight="@dimen/dimen_10">
            </CheckBox>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>