<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_close"
                android:padding="@dimen/size_15"
                android:text="Select Courses"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_size_16" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/size_15"
                android:src="@drawable/ic_close"
                android:tint="@color/colorBlack" />

            <TextView
                android:id="@+id/tv_clear_standard_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:padding="@dimen/size_15"
                android:text="CLEAR"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/font_size_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/colorGrey" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_total_selected_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_10"
            android:textColor="@color/colorThemeBlue"
            tools:text="Total Courses Selected : 8" />

        <ListView
            android:id="@+id/lv_filter_course_list"
            android:layout_width="match_parent"
            android:background="@drawable/list_item_rounded"
            android:dividerHeight="@dimen/dimen_2"
            android:divider="@null"
            android:layout_marginBottom="@dimen/dimen_50"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="@dimen/dimen_150"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Apply"
            android:id="@+id/apply_btn"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_18"
            android:background="@drawable/login_btn_rounded">
        </Button>

    </RelativeLayout>

</RelativeLayout>