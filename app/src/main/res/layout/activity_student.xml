<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.globalitians.inquiry.activities.Student.activity.StudentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_10">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/student_image"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                app:civ_border="true"
                android:src="@drawable/default_user_image"
                android:layout_centerHorizontal="true"
                app:civ_border_color="@color/bv_primaryColor">
            </de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/open_camera_btn"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/ic_photo_camera_setting_24dp"
                app:civ_border="true"
                android:background="@drawable/circle_image_back"
                app:civ_border_color="@color/bv_secondaryColor"
                app:civ_border_width="@dimen/dimen_1"
                android:layout_marginTop="@dimen/dimen_41"
                android:layout_alignRight="@+id/student_image"/>

            <TextView
                android:id="@+id/textview_one"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:text="@string/one"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_16"
                android:background="@drawable/textview_one_bk"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_below="@+id/student_image"/>

            <TextView
                android:id="@+id/tv_personal_deetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textview_one"
                android:text="Personal Details"
                android:textSize="@dimen/font_size_18"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_10"
                android:clickable="true"
                android:layout_below="@+id/student_image"
                android:textColor="@color/bv_primaryColor"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_420"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_20"
                app:cardCornerRadius="@dimen/dimen_20"
                android:id="@+id/card_view"
                android:visibility="visible"
                app:cardElevation="@dimen/dimen_4"
                android:background="@drawable/login_layout_rounded"
                android:layout_below="@+id/tv_personal_deetails">

                <RelativeLayout
                    android:id="@+id/layout_form"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_420"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10"
                    android:background="@drawable/login_layout_rounded">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_other_course"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:visibility="visible"
                        android:layout_marginBottom="@dimen/dimen_10"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:hint="@string/strFirstname"
                            android:imeOptions="actionNext"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:background="@drawable/edittextround"
                            android:theme="@style/ColoredHandleTheme"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_other_course1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:visibility="visible"
                        android:layout_below="@+id/text_input_other_course"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:layout_marginBottom="@dimen/size_10"
                            android:background="@drawable/edittextround"
                            android:hint="@string/strLastname"
                            android:imeOptions="actionNext"
                            android:theme="@style/ColoredHandleTheme"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_other_course2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:visibility="visible"
                        android:layout_below="@+id/text_input_other_course1"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:layout_marginBottom="@dimen/size_10"
                            android:background="@drawable/edittextround"
                            android:hint="@string/strMobileno"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:clickable="true"
                            android:theme="@style/ColoredHandleTheme"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_other_course3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:visibility="visible"
                        android:layout_below="@+id/text_input_other_course2"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:layout_marginBottom="@dimen/size_10"
                            android:background="@drawable/edittextround"
                            android:hint="@string/strEmail"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:theme="@style/ColoredHandleTheme"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_other_course7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:visibility="visible"
                        android:layout_below="@+id/text_input_other_course3"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_birth_date"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:editable="false"
                            android:focusable="false"
                            android:layout_below="@+id/tv_upcoming_date"
                            android:theme="@style/ColoredHandleTheme"
                            android:background="@drawable/edittextround"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:hint="@string/strBirthDate" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_below="@+id/text_input_other_course7"
                        android:id="@+id/tv_gender_select"
                        style="@style/textview_normal_form"
                        android:text="@string/strgenderselect">
                    </TextView>

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_below="@+id/tv_gender_select"
                        android:entries="@array/gender_array"
                        android:padding="@dimen/size_10"
                        android:spinnerMode="dropdown"
                        android:layout_marginBottom="@dimen/size_10"
                        android:background="@drawable/edittextround">
                    </Spinner>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textview_two"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:text="@string/two"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_16"
                android:background="@drawable/textview_one_bk"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_below="@+id/card_view" />

            <TextView
                android:id="@+id/tv_username_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textview_two"
                android:text="Create Username &amp; Password"
                android:textSize="@dimen/font_size_18"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_below="@+id/card_view"
                android:clickable="true"
                android:textColor="@color/bv_primaryColor"/>

            <View
                android:id="@+id/lineone"
                android:layout_width="@dimen/dimen_4"
                android:layout_height="@dimen/dimen_440"
                android:layout_below="@+id/textview_one"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@color/bv_primaryColor"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_215"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_20"
                app:cardCornerRadius="@dimen/dimen_20"
                android:id="@+id/card_view_second"
                android:visibility="gone"
                app:cardElevation="@dimen/dimen_4"
                android:background="@drawable/login_layout_rounded"
                android:layout_below="@+id/tv_username_details">

                <RelativeLayout
                    android:id="@+id/layout_second_form"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_215"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10"
                    android:background="@drawable/login_layout_rounded">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinput_student_username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:visibility="visible"
                        android:layout_marginBottom="@dimen/dimen_10"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_username"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:hint="@string/strUsername"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/edittextround"
                            android:theme="@style/ColoredHandleTheme"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinput_student_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:visibility="visible"
                        android:layout_below="@+id/tinput_student_username"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:layout_marginBottom="@dimen/size_10"
                            android:background="@drawable/edittextround"
                            android:hint="@string/strPassword"
                            android:imeOptions="actionNext"
                            android:theme="@style/ColoredHandleTheme"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinput_student_confirm_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:visibility="visible"
                        android:layout_below="@+id/tinput_student_pwd"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_confirm_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:layout_marginBottom="@dimen/size_10"
                            android:background="@drawable/edittextround"
                            android:hint="@string/strConfirmpassword"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:theme="@style/ColoredHandleTheme"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textview_three"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:text="@string/three"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_16"
                android:background="@drawable/textview_one_bk"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_below="@+id/card_view_second" />

            <TextView
                android:id="@+id/tv_parent_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textview_two"
                android:text="Parent Details"
                android:textSize="@dimen/font_size_18"
                android:layout_marginLeft="@dimen/dimen_10"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_10"
                android:clickable="true"
                android:layout_below="@+id/card_view_second"
                android:textColor="@color/bv_primaryColor"/>

            <View
                android:id="@+id/linetwo"
                android:layout_width="@dimen/dimen_4"
                android:layout_height="@dimen/dimen_235"
                android:layout_below="@+id/textview_two"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@color/bv_primaryColor"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_215"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_20"
                app:cardCornerRadius="@dimen/dimen_20"
                android:id="@+id/card_view_third"
                android:visibility="gone"
                app:cardElevation="@dimen/dimen_4"
                android:background="@drawable/login_layout_rounded"
                android:layout_below="@+id/tv_parent_details">

                <RelativeLayout
                    android:id="@+id/layout_third_form"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_215"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10"
                    android:background="@drawable/login_layout_rounded">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinput_parents_fname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:visibility="visible"
                        android:layout_marginBottom="@dimen/dimen_10"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_parentname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:hint="@string/strparetnsfname"
                            android:imeOptions="actionNext"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:background="@drawable/edittextround"
                            android:theme="@style/ColoredHandleTheme"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinput_parents_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:visibility="visible"
                        android:layout_below="@+id/tinput_parents_fname"
                        app:hintTextAppearance="@style/TextInputLayout" >

                        <EditText
                            android:id="@+id/edt_parent_mobileno"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:layout_marginBottom="@dimen/size_10"
                            android:background="@drawable/edittextround"
                            android:hint="@string/strMobileno"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:theme="@style/ColoredHandleTheme"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:singleLine="true"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tinput_parents_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:visibility="visible"
                        android:layout_marginBottom="@dimen/dimen_10"
                        app:hintTextAppearance="@style/TextInputLayout"
                        android:layout_below="@+id/tinput_parents_mobile">

                        <EditText
                            android:id="@+id/edt_parent_address"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_35"
                            android:hint="@string/strparentaddress"
                            android:imeOptions="actionNext"
                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:maxLines="4"
                            android:background="@drawable/edittextround"
                            android:theme="@style/ColoredHandleTheme"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/bv_primaryDarkColor"
                            android:paddingLeft="@dimen/dimen_18"
                            android:textSize="@dimen/size_18" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textview_four"
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:text="@string/four"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_16"
                    android:background="@drawable/textview_one_bk"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_below="@+id/card_view_third" />

                <TextView
                    android:id="@+id/tv_course_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textview_two"
                    android:text="Course Details"
                    android:textSize="@dimen/font_size_18"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:clickable="true"
                    android:layout_below="@+id/card_view_third"
                    android:textColor="@color/bv_primaryColor"/>

                <View
                    android:id="@+id/linethree"
                    android:layout_width="@dimen/dimen_4"
                    android:layout_height="@dimen/dimen_235"
                    android:layout_below="@+id/textview_three"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@color/bv_primaryColor"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_20"
                app:cardCornerRadius="@dimen/dimen_20"
                android:id="@+id/card_view_fourth"
                android:visibility="gone"
                app:cardElevation="@dimen/dimen_4"
                android:background="@drawable/login_layout_rounded"
                android:layout_below="@+id/tv_course_details">

                <RelativeLayout
                    android:id="@+id/layout_fourth_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_10"
                    android:background="@drawable/login_layout_rounded">

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_add_new"
                            android:layout_width="@dimen/dimen_200"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_5"
                            android:layout_marginRight="@dimen/size_2"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/dimen_8"
                            android:text="@string/strAddNew"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/size_16"
                            android:background="@color/bv_primaryColor">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_view_student_courses"
                            android:layout_width="@dimen/dimen_200"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/size_2"
                            android:layout_marginTop="@dimen/size_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/dimen_8"
                            android:text="@string/strView"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/size_16"
                            android:background="@color/bv_primaryColor">
                        </TextView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_input_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/strInstallmentDate"
                        android:layout_below="@+id/linear"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textStyle="normal"
                        android:textSize="@dimen/font_size_16"
                        android:textColor="@color/colorBlackAlpha">
                    </TextView>

                    <EditText
                        android:id="@+id/edt_installment_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_35"
                        android:editable="false"
                        android:focusable="false"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_below="@+id/tv_input_title"
                        android:theme="@style/ColoredHandleTheme"
                        android:background="@drawable/edittextround"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textColor="@color/bv_primaryDarkColor"
                        android:paddingLeft="@dimen/dimen_18"
                        android:hint="@string/strInstallmentDate" />

                    <TextView
                        android:id="@+id/tv_input_title_one"
                        android:layout_width="wrap_content"
