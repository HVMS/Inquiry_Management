<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".activities.others.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10">

        <ImageView
            android:layout_width="305dp"
            android:layout_height="176dp"
            android:id="@+id/login_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_40"
            android:src="@mipmap/login_image_with_text"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_180"
            android:layout_below="@+id/login_image"
            android:layout_marginTop="@dimen/dimen_30"
            app:cardCornerRadius="@dimen/dimen_20"
            android:elevation="@dimen/dimen_4"
            app:cardElevation="@dimen/dimen_4"
            android:background="@drawable/login_layout_rounded">

            <RelativeLayout
                android:id="@+id/rel_user_pwd"
                android:layout_below="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_180"
                android:background="@drawable/login_layout_rounded">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_size_16"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_15">
                </TextView>

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:drawablePadding="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_login_username"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:paddingLeft="@dimen/dimen_10"
                    android:hint="@string/strUsername"
                    android:maxLines="1"
                    android:lines="1"
                    android:textColor="@color/bv_primaryColor"
                    android:theme="@style/ColoredHandleTheme"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edittextround">
                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_size_16"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_90">
                </TextView>


                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_35"
                    android:hint="@string/strPassword"
                    android:textColor="@color/bv_primaryColor"
                    android:paddingLeft="@dimen/dimen_10"
                    android:drawableStart="@drawable/ic_login_password"
                    android:textSize="@dimen/font_size_18"
                    android:theme="@style/ColoredHandleTheme"
                    android:maxLines="1"
                    android:drawablePadding="@dimen/dimen_5"
                    android:imeOptions="actionDone"
                    android:layout_below="@+id/edt_username"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@drawable/edittextround">
                </EditText>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/tv_login"
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_50"
            android:layout_below="@+id/card_view"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_30"
            android:textStyle="bold"
            android:text="Login"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_btn_rounded"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_20" />

        <TextView
            android:id="@+id/tv_auto_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login"
            android:layout_marginTop="@dimen/dimen_30"
            android:textStyle="bold"
            android:text="Username And Password will"
            android:textColor="@color/bv_primaryColor"
            android:gravity="center"
            android:textSize="@dimen/font_size_16">
        </TextView>

        <TextView
            android:id="@+id/tv_auto_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_auto_line_1"
            android:text="Automatically Generated By Gloabal IT"
            android:textColor="@color/bv_primaryColor"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_16">
        </TextView>

        <TextView
            android:id="@+id/tv_auto_line_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_auto_line_2"
            android:text="Infosolution"
            android:textColor="@color/bv_primaryColor"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_16">
        </TextView>

    </RelativeLayout>
</RelativeLayout>