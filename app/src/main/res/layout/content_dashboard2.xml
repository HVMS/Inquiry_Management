<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.Dashboard.Activities.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard2">

    <RelativeLayout
        android:id="@+id/rel_student_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-41dp"
        tools:ignore="UnknownId">

        <ScrollView
            android:id="@+id/scr_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_25"
                    android:background="@color/bv_primaryDarkColor" />

                <RelativeLayout
                    android:id="@+id/rel_drawer_top_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_150"
                    android:background="@drawable/gradient_background_dashboard">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/nav_bk_image_1"
                        android:alpha="0.65"
                        android:scaleType="fitXY">
                    </ImageView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="@dimen/dimen_70"
                        android:layout_height="@dimen/dimen_70"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:src="@mipmap/ic_inquiry" />

                    <TextView
                        android:id="@+id/tv_employee_name"
                        android:layout_width="@dimen/dimen_230"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_profile_image"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:text="Santosh Maurya"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font_size_22"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:visibility="gone">
                </View>

                <RelativeLayout
                    android:id="@+id/rel_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_8">

                    <ImageView
                        android:id="@+id/iv_home"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@mipmap/ic_home" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_home"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/strHome"
                        android:textColor="@color/bv_primaryColor"
                        android:textSize="@dimen/Size_16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:visibility="gone">
                </View>

                <RelativeLayout
                    android:id="@+id/rel_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_8">

                    <ImageView
                        android:id="@+id/iv_about_us"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@mipmap/ic_about_us_new" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_about_us"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/strAboutUs"
                        android:textColor="@color/bv_primaryColor"
                        android:textSize="@dimen/Size_16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:visibility="gone"></View>

                <RelativeLayout
                    android:id="@+id/rel_view_on_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_8">

                    <ImageView
                        android:id="@+id/iv_map"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@mipmap/ic_viewonmap" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_map"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/strViewOnMap"
                        android:textColor="@color/bv_primaryColor"
                        android:textSize="@dimen/Size_16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:visibility="gone">
                </View>

                <RelativeLayout
                    android:id="@+id/rel_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_8">

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/tv_call_now"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_phone"
                        android:text="Contact Us"
                        android:textColor="@color/bv_primaryColor"
                        android:textSize="@dimen/Size_16"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:visibility="gone"></View>

                <RelativeLayout
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_8">

                    <ImageView
                        android:id="@+id/ic_share"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@mipmap/ic_share" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ic_share"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/strShare"
                        android:textColor="@color/bv_primaryColor"
                        android:textSize="@dimen/Size_16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_8">

                    <ImageView
                        android:id="@+id/iv_logout"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@drawable/ic_logout" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_logout"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/strLogout"
                        android:textColor="@color/bv_primaryColor"
                        android:textSize="@dimen/Size_16"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>