<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_clear_standard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_close"
            android:padding="@dimen/size_15"
            android:text="Select Standard"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_size_16" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/size_15"
            android:src="@drawable/ic_close"
            android:tint="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_clear_course_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:enabled="false"
            android:padding="@dimen/size_15"
            android:text="CLEAR"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <ListView
        android:layout_below="@+id/rel_clear_standard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="@dimen/dimen_2"
        android:background="@drawable/list_item_rounded"
        android:id="@+id/standard_filter_list"
        android:layout_marginBottom="@dimen/dimen_50">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/apply_btn"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:text="Apply"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_18"
            android:background="@drawable/login_btn_rounded">
        </Button>

    </RelativeLayout>

</RelativeLayout>