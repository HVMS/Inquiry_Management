    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_85"
        app:cardCornerRadius="@dimen/dimen_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:id="@+id/rel_container"
            android:background="@drawable/demo_dashboard_bk_item">

            <ImageView
                android:id="@+id/iv_student_option"
                android:layout_width="@dimen/dimen_45"
                android:layout_height="@dimen/dimen_45"
                android:layout_marginLeft="@dimen/dimen_20"
                android:src="@drawable/ic_plus_button">
            </ImageView>

            <TextView
                android:id="@+id/tv_student_option"
                android:layout_width="@dimen/dimen_200"
                android:layout_height="wrap_content"
                android:text="Add New Inquiry"
                android:gravity="start"
                android:paddingLeft="@dimen/dimen_20"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_menu_share"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_right_dashboard"
                android:layout_toEndOf="@+id/tv_student_option"
                android:layout_centerInParent="true">
            </ImageView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

