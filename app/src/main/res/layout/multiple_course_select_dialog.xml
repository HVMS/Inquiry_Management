<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bv_secondaryColor"
        android:padding="@dimen/size_10"
        android:text="--Select Courses--"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_size_20" />

    <RelativeLayout
        android:paddingRight="@dimen/size_1"
        android:paddingLeft="@dimen/size_1"
        android:id="@+id/relBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle">

        <ListView
            android:id="@+id/lv_courses"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_400"
            android:background="@color/colorWhite">
        </ListView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relBorder"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_1"
            android:layout_weight="1"
            android:background="@drawable/login_btn_rounded"
            android:gravity="center_horizontal"
            android:padding="@dimen/size_10"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_20" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_1"
            android:layout_weight="1"
            android:background="@drawable/login_btn_rounded"
            android:gravity="center_horizontal"
            android:padding="@dimen/size_10"
            android:text="Cancel"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>

</RelativeLayout>