<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_5">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_20"
        android:elevation="@dimen/dimen_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_container"
            android:background="@drawable/demo_dashboard_bk_item"
            android:layout_margin="@dimen/dimen_10">

            <ImageView
                android:id="@+id/iv_student_option"
                android:layout_width="@dimen/dimen_45"
                android:layout_height="@dimen/dimen_45"
                android:src="@drawable/ic_plus_button">
            </ImageView>

            <TextView
                android:id="@+id/tv_student_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Inquiry"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_student_option_center"
                android:src="@drawable/ic_arrow_right_dashboard"
                android:layout_toEndOf="@+id/tv_student_option"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true">
            </ImageView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>