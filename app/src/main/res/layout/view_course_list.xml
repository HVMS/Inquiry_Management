<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/size_5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        app:cardCornerRadius="@dimen/dimen_8"
        android:elevation="@dimen/dimen_5">

        <RelativeLayout
            android:padding="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_course"
                android:layout_width="@dimen/dimen_55"
                android:layout_height="@dimen/dimen_55">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_toLeftOf="@+id/iv_delete_course"
                android:layout_toRightOf="@+id/iv_course"
                android:ellipsize="end"
                android:hint="Course Name"
                android:maxLines="3"
                android:textColor="@color/colorBlackAlpha"
                android:textSize="@dimen/font_size_18">
            </TextView>

            <ImageView
                android:id="@+id/iv_delete_course"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/dimen_28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_delete"
                android:tint="@color/colorBlackAlpha" />

            <CheckBox
                android:id="@+id/chkCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="false" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>